# Environment Configuration Template
# Copy this file to .env and update the values

# Flask Settings
SECRET_KEY=your-secret-key-here
FLASK_ENV=development

# Database Configuration
DATABASE_URL=postgresql://ocr_user:ocr_password@localhost:5432/ocr_agent

# OCR Configuration
TESSERACT_PATH=/usr/bin/tesseract
USE_DEEPSEEK_OCR=true
DEEPSEEK_OCR_URL=http://localhost:8001

# OnlyOffice Configuration
ONLYOFFICE_URL=http://localhost:8000
ONLYOFFICE_SECRET=your-onlyoffice-secret
ONLYOFFICE_TOKEN=your-onlyoffice-token
ONLYOFFICE_STORAGE_URL=http://localhost:5000/storage

# AI/LLM Configuration
OPENAI_API_KEY=your-openai-api-key
OLLAMA_BASE_URL=http://localhost:11434
LM_STUDIO_BASE_URL=http://localhost:1234
DEFAULT_LLM_PROVIDER=ollama

# Vector Embedding Settings
EMBEDDING_MODEL=all-MiniLM-L6-v2
CHUNK_SIZE=500
CHUNK_OVERLAP=50

# Redis Configuration
REDIS_URL=redis://localhost:6379

# API Settings
API_RATE_LIMIT=100 per hour

# Logging
LOG_LEVEL=INFO

# Upload Settings
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216